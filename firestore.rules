/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for projects and skills, and a write-only model for public messages.
 *
 * Data Structure:
 * - /users/{userId}/... for user-specific data.
 * - /messages/{messageId} for contact form submissions.
 *
 * Key Security Decisions:
 * - User listing is disabled.
 * - User data (projects, skills) is only accessible by the owner.
 * - The /messages collection is write-only for any user (authenticated or not) to allow contact form submissions, but read/update/delete are denied to protect privacy.
 * - Minimal data validation, focusing on ownership and basic constraints.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    function isCreatingForOwner(userId) {
        return isSignedIn() && request.resource.data.id == userId;
    }

    // User-specific collections
    match /users/{userId} {
      /**
       * Secures the projects subcollection.
       * Only the owning user can manage their projects.
       */
      match /projects/{projectId} {
        allow get, list: if isOwner(userId);
        allow create: if isCreatingForOwner(userId);
        allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
        allow delete: if isExistingOwner(userId);
      }

      /**
       * Secures the skills subcollection.
       * Only the owning user can manage their skills.
       */
      match /skills/{skillId} {
        allow get, list: if isOwner(userId);
        allow create: if isCreatingForOwner(userId);
        allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
        allow delete: if isExistingOwner(userId);
      }
    }

    /**
     * @description
     * Secures the messages collection for the contact form.
     * Allows anyone to create (send) a message.
     * Denies read, update, and delete to protect the submitted information.
     *
     * @path /messages/{messageId}
     *
     * @allow (create) - Any user (anonymous or authenticated) can submit a message.
     * @deny (get, list, update, delete) - No one can read, modify, or delete messages from the client-side.
     *
     * @principle Write-only access for public data submission.
     */
    match /messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}